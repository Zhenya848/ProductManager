@page "{id:guid}"
@model ProductManager.Pages.Accounts.Admin.EditRoleModel
@{
}

@if (Model.IsHavePermission)
{   
    <div>
        <div class="container">
            <form method="post">
                <div class="mb-3 justify-content-center">
                    <button class="btn btn-primary" type="submit" asp-page-handler="Participant">Пользователь</button>
                </div>

                <div class="mb-3 justify-content-center">
                    <button class="btn btn-primary" type="submit" asp-page-handler="Moderator">Модератор</button>
                </div>

                <div class="mb-3 justify-content-center">
                    <button class="btn btn-primary" type="submit" asp-page-handler="Admin">Администратор</button>
                </div>
            </form>

            @if (string.IsNullOrEmpty(Model.ErrorMessage) == false)
            {
                <script type="text/javascript" >
                    window.onload = function () {
                        alert("@Model.ErrorMessage");
                    };
                </script>
            }
        </div>
    </div>
    
    @if (string.IsNullOrEmpty(Model.ErrorMessage) == false)
    {
        <script type="text/javascript" >
            window.onload = function () {
                alert("@Model.ErrorMessage");
            };
        </script>
    }
}
else
{
    <div class="bg-secondary bg-opacity-10 py-2 mb-5">
        <div class="container">
            <h1>Ошибка 403: У пользователя недостаточно прав</h1>
        </div>
    </div>
}
